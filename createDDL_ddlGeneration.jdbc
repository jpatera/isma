CREATE TABLE COMMENT (ID BIGINT GENERATED BY DEFAULT AS IDENTITY NOT NULL, AUTHOR_CODE VARCHAR(255), AUTHOR_NAME VARCHAR(255), CREATED DATE, HEADER VARCHAR(255), TEXT VARCHAR(255), ISSUE_ID BIGINT, PRIMARY KEY (ID))
CREATE TABLE usr (ID BIGINT GENERATED BY DEFAULT AS IDENTITY NOT NULL, CODE VARCHAR(255), EMAIL VARCHAR(255), FIRSTNAME VARCHAR(255), FULLNAME VARCHAR(255), LASTNAME VARCHAR(255), LOGINNAME VARCHAR(255), LOGINPWD VARCHAR(255), PRIMARY KEY (ID))
CREATE TABLE ISSUE (ID BIGINT GENERATED BY DEFAULT AS IDENTITY NOT NULL, CREATED DATE, DESCRIPTION VARCHAR(255), PRIORITY INTEGER, STATUS VARCHAR(255), SUMMARY VARCHAR(255), ASSIGNEDTO_ID BIGINT, CREATEDBY_ID BIGINT, PRIMARY KEY (ID))
ALTER TABLE COMMENT ADD CONSTRAINT COMMENT_ISSUE_ID FOREIGN KEY (ISSUE_ID) REFERENCES ISSUE (ID)
ALTER TABLE ISSUE ADD CONSTRAINT ISSUE_CREATEDBY_ID FOREIGN KEY (CREATEDBY_ID) REFERENCES usr (ID)
ALTER TABLE ISSUE ADD CONSTRAINT ISSUEASSIGNEDTO_ID FOREIGN KEY (ASSIGNEDTO_ID) REFERENCES usr (ID)
